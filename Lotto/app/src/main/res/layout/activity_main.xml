<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:backgroundTint="@color/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:contestd_gamext=".MainActivity">

        <!-- _______________________________________________________________________ -->
        <include layout="@layout/header" />
        <View
            android:id="@+id/view"
            android:layout_width="5dp"
            android:layout_height="700dp"
            android:layout_marginStart="8dp"
            android:background="@color/standard_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <!-- _______________________________________________________________________ -->
        <TextView
            android:id="@+id/textViewHTML"
            android:layout_width="318dp"
            android:layout_height="108dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/cour"
            android:text="@string/htmlText"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- _______________________________________________________________________ -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="228dp"
            android:layout_height="40dp"

            android:layout_marginStart="15dp"
            android:layout_marginTop="364dp"
            android:fontFamily="@font/cour_bold"
            android:text="Avviare la simulazione..."
            android:textAlignment="viewStart"
            android:textColor="@color/standard_text_color"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <include layout="@layout/line_from_side_to_btn_1" />

        <Button
            android:id="@+id/buttonStart"
            style="@style/standard_btn"
            android:layout_marginTop="4dp"
            android:text="Start"
            app:cornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:strokeColor="@color/neon_green"
            app:strokeWidth="2dp" />
<!-- _______________________________________________________________________ -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="508dp"
            android:fontFamily="@font/cour_bold"
            android:text="O leggere la teoria ;)"
            android:textAlignment="viewStart"
            android:textColor="@color/standard_text_color"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <include layout="@layout/line_from_side_to_btn_2" />

        <Button
            android:id="@+id/buttonRules"
            style="@style/standard_btn"
            android:layout_marginTop="4dp"
            android:text="Rules"
            app:cornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:strokeColor="@color/neon_green"
            app:strokeWidth="2dp" />
        <!-- _______________________________________________________________________ -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>