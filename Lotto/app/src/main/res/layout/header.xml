<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">

    <View
        android:id="@+id/view2"
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:layout_marginStart="204sp"
        android:layout_marginTop="76sp"
        android:background="#FFFFFF"
        android:rotation="-40"
        android:rotationX="0"
        android:rotationY="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="242dp"
        android:layout_height="40dp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="110sp"

        android:fontFamily="@font/cour_bold"
        android:text="Misconcetti e la loro confutazione"
        android:textAlignment="viewEnd"
        android:textColor="@color/neon_green"

        android:textSize="18sp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/view4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="100sp"
        android:layout_height="2dp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="116sp"
        android:background="#FFFFFF"
        android:rotation="30"
        android:rotationX="0"
        android:rotationY="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view6"
        android:layout_width="40sp"
        android:layout_height="2dp"
        android:layout_marginStart="178sp"
        android:layout_marginTop="151sp"
        android:background="#FFFFFF"
        android:rotation="30"
        android:rotationX="0"
        android:rotationY="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="200sp"
        android:layout_height="1dp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="92sp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view8"
        android:layout_width="60sp"
        android:layout_height="1dp"
        android:layout_marginStart="246sp"
        android:layout_marginTop="60sp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="80sp"
        android:layout_height="2dp"
        android:layout_marginStart="101sp"
        android:layout_marginTop="141sp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="197sp"
        android:layout_height="2dp"
        android:layout_marginStart="214sp"
        android:layout_marginTop="160sp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="140sp"
        android:layout_height="61sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="24sp"
        android:fontFamily="@font/cour_bold"

        android:lineSpacingExtra="2sp"
        android:text="Gioco del lotto"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"

        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295sp"
        android:layout_marginTop="35sp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />
</merge>