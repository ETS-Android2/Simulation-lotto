<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modal_background"
    android:backgroundTint="@color/modal_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/startMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:fontFamily="@font/cour"
            android:textColor="@color/standard_text_color"
            android:textColorHint="@color/standard_text_color"
            android:hint="0$"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/significantGameCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/standard_text_color"
            android:textColorHint="@color/standard_text_color"
            android:ems="10"
            android:fontFamily="@font/cour"
            android:hint="1000"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/cour_bold"
            android:text="Partite dei giocatori:"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/presetGameCount" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cour_bold"
            android:gravity="center"
            android:text="Settings"
            android:textSize="18sp"
            android:textColor="@color/standard_text_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/cour_bold"
            android:text="Game mode:"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cour_bold"
            android:text="Credito iniziale:"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/significantGameCount" />

        <RadioGroup
            android:id="@+id/radio_grup_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="MissingConstraints">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:buttonTint="@color/neon_green"
                android:textColor="@color/standard_text_color"
                android:checked="true"
                android:fontFamily="@font/cour"
                android:text="Realistico"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:textColor="@color/standard_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:buttonTint="@color/neon_green"
                android:checked="false"
                android:fontFamily="@font/cour"
                android:text="Equo"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

<!--            <RadioButton-->
<!--                android:id="@+id/radioButton3"-->
<!--                android:textColor="@color/standard_text_color"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="15dp"-->
<!--                android:layout_marginTop="3dp"-->
<!--                android:buttonTint="@color/neon_green"-->
<!--                android:checked="false"-->
<!--                android:fontFamily="@font/cour"-->
<!--                android:text="Ambo"-->
<!--                android:textSize="14sp"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/textView5" />-->
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/cour_bold"
            android:text="Partite iniziali da giocare:"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_grup_1" />

        <EditText
            android:id="@+id/presetGameCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:ems="10"
            android:fontFamily="@font/cour"
            android:textColorHint="@color/standard_text_color"
            android:hint="100"
            android:inputType="number"
            android:shadowColor="#000000"
            android:textColor="@color/standard_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:autofillHints="" />

        <Button
            android:id="@+id/buttonStartModal"
            style="@style/standard_btn"
            android:layout_marginTop="452dp"
            android:text="Start"
            android:onClick="openText"
            app:cornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:strokeColor="@color/neon_green"
            app:strokeWidth="2dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>