<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.voltdevelopers.lotto" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lotto" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StatisticActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:label="StatActivity" />
        <activity
            android:name=".activities.RulesActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:label="RulesActivity" />
        <activity
            android:name=".activities.StartGameActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:label="StartGameActivity" />
    </application>

</manifest>